FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Exclude .env and node_modules
COPY . . --chown=node:node --exclude=.env --exclude=node_modules

# Copy environment variables
COPY .env .

# Expose development port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev"]
